#!/bin/bash
mkdir -p ~/classcreator
cp classfile ~/classcreator/.
cp classmaker ~/classcreator/.
echo -e "alias createclass='~/classcreator/./classmaker'" >> ~/.zshrc
chmod +x ~/classcreator/classmaker
echo -e "run the following command:\n\tsource ~/.zshrc"
echo -e "\nTo use the create class run the command:\n\tcreateclass <classname>"
